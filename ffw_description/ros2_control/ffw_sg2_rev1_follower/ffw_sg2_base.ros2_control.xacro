        <param name="Velocity P Gain">100000</param>
        <param name="Velocity FF Gain">50000</param>
        <param name="Profile Acceleration">100</param>
      </gpio>
      <gpio name="ffw_g10_rcu">
        <param name="type">controller</param>
        <param name="ID">200</param>
      </gpio>
    </ros2_control>
  </xacro:macro>
</robot>
